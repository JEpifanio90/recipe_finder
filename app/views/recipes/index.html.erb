<h1>Searching for <%= @search%></h1>
<table border="2">
  <tr>
    <td>Image</td>
    <td>Title</td>
    <td>Social Rank</td>
  </tr>
  <% @result.each do |recipe| %>
      <tr>
        <td><%= link_to(image_tag(recipe["image_url"], width:'100', height:'100'), recipe["source_url"]) %></td>
        <td><%= link_to(sanitize(recipe["title"]),recipe["source_url"]) %></td>
        <td><%= recipe["social_rank"]%></td>
      </tr>
  <% end%>
</table>


